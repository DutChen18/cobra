{
	listen 443
	server_name pgp.hyxo.nl

	location / {
		root /var/www
		root /var/www/html
	}

	location / {
		set_header server "cobra";
		max_bodysize 10000

		redirect 202 pgp.hyxo.nl

		index file.html
		index file.html

		method GET {
			root /var/www;
		}

		method POST {
			cgi 127.0.0.1;
		}

		error 405
	}

	#server_name pgp.hyxo.nl;
	ssl_certificate pgp.hyxo.nl.crt;
	max_body_size 100000

	server_name a.hyxo.nl
	ssl "a .txt" b c
}
